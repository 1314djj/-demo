late>\n\n<script>\n  import bus from '@/components/eventBus.js'\n\nexport default {\n  props: {\n    //接收商品的id值，将来使用 EventBus 方案，\n    //把数量传递到 App.vue的时候，需要通知 App 组件，更新哪个商品的数量\n    id: {\n      type:Number,\n      required: true\n    }, \n   // 接收到的 num 数量值\n    num: {\n      type: Number,\n      default:1\n    }\n  },\n\n  methods: {\n    //点击按钮，数值 +1\n    add() {\n      // 要发送给 App 的数据格式为 { id, value}\n      // 其中， id 是商品的 id； value 是商品最新的购买数量\n      const obj = {id: this.id, value: this.num+1}\n      // 接下来，通过EventBus 把 obj 对象发送给 App.vue 组件\n      bus.$emit('share',obj)\n    }\n  }\n}\n</script>\n\n<style lang=\"less\" scoped>\n.number-box {\n  min-width: 30px;\n  text-align: center;\n  margin: 0 5px;\n  font-size: 12px;\n}\n\n.btn-sm {\n  width: 30px;\n}\n</style>\n"]}]}